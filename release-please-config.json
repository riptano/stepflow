{
    "separate-pull-requests": true,
    "include-v-in-tag": false,
    "draft-pull-request": true,
    "manifest": {},
    "packages": {
        "stepflow-rs": {
            "package-name": "stepflow-rs",
            "release-type": "simple",
            "include-component-in-tag": true,
            "extra-files": [
                {
                    "path": "stepflow-rs/Cargo.toml",
                    "type": "toml",
                    "jsonpath": "$[\"workspace.package\"]"
                },
                {
                    "path": "stepflow-rs/Cargo.lock",
                    "type": "cargo-lock"
                }
            ]
        },
        "sdks/python": {
            "package-name": "stepflow-py",
            "release-type": "python",
            "include-component-in-tag": true
        },
        "sdks/typescript": {
            "package-name": "stepflow-ts",
            "release-type": "node",
            "include-component-in-tag": true
        }
    }
}